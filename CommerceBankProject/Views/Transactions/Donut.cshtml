@model CommerceBankProject.Models.TCategoryAggregatedIndexViewModel

@{
    ViewData["Title"] = "Donut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Donut</h1>
</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Category', 'NetAmount'],
            @foreach (var item in Model.tList) {
            <text>['@item.category', @item.NetAmount],</text>
        }]);

        console.log("Data: ", data);

        var options = {
            title: 'Categorical Spending',
            width: '100%',
            height: '100%',
            chartArea: { width: '85%', height: '75%' },
            pieHole: 0.4
            };

        var chart = new google.visualization.PieChart(document.getElementById('chart_test'));
        chart.draw(data, options);
        }
</script>

<div class="container-fluid lead">
    <div id="chart_test" style="width: 800px; height: 600px"></div>
</div>
