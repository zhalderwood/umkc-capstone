@model CommerceBankProject.Models.TCategoryAggregatedIndexViewModel

<div class="text-center">
    <b style="font-size: 150%">Categorical Spending</b>
</div>

    <script type="text/javascript">
google.charts.load('current', { 'packages': ['corechart'] });
google.charts.setOnLoadCallback(drawChart);
function drawChart() {

    var data = google.visualization.arrayToDataTable([
        ['Category', 'NetAmount'],
        @foreach (var item in Model.tList) {
        <text>['@item.category', @item.NetAmount],</text>
    }]);

    console.log("Data: ", data);
    console.log("Inside Category Graph View Component Default.cs");

    var options = {
        width: '100%',
        height: '100%',
        chartArea: { width: '80%', height: '80%' },
        pieHole: 0.4
        , slices: {
            0: { color: '#4FA800' }
            , 1: { color: '#007AA3' }
            , 2: { color: '#FFB300' }
            , 3: { color: '#006747' }
            , 4: { color: '#E30000' }
        }
        , legend: {
            position: 'bottom'
            , alignment: 'center'
        }
        };

    var chart = new google.visualization.PieChart(document.getElementById('cat_graph'));
    chart.draw(data, options);
    }
    </script>

    <div class="container-fluid lead">
        <div id="cat_graph" style="width: 400px; height: 400px"></div>
    </div>
